<thead>
	<tr>
		<th class="default-ascending">
			<% if @sort == 'member-name' -%>
				<% if @order == 'ascending' -%>
					<%= link_to( 'Member', member_list_url( :sort => 'member-name', :order => 'descending', :anchor => 'members' ), :class => 'sorted', :title => 'Sort by Member name' ) %>
				<% else -%>
					<%= link_to( 'Member', member_list_url( :anchor => 'members' ), :class => 'sorted', :title => 'Sort by Member name' ) %>
				<% end -%>
			<% else -%>
				<%= link_to( 'Member', member_list_url( :anchor => 'members' ), :title => 'Sort by Member name' ) %>
			<% end -%>
		</th>
		<th class="default-decending number">
			<% if @sort == 'question-count' -%>
				<% if @order == 'ascending' -%>
					<%= link_to( 'Question count', member_list_url( :sort => 'question-count', :order => 'descending', :anchor => 'members' ), :class => 'sorted', :title => 'Sort by question count' ) %>
				<% else -%>
					<%= link_to( 'Question count', member_list_url( :sort => 'question-count', :order => 'ascending', :anchor => 'members' ), :class => 'sorted', :title => 'Sort by question count' ) %>
				<% end -%>
			<% else -%>
				<%= link_to( 'Question count', member_list_url( :sort => 'question-count', :order => 'descending', :anchor => 'members' ), :title => 'Sort by question count' ) %>
			<% end -%>
		</th>
	</tr>
</thead>