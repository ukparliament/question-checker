<thead>
	<tr>
		<td class="default-ascending">
			<% if @sort == 'answering-body' -%>
				<% if @order == 'ascending' -%>
					<%= link_to( 'Answering body', answering_body_list_url( :sort => 'answering-body', :order => 'descending', :anchor => 'answering-bodies' ), :class => 'sorted', :title => 'Sort by answering body' ) %>
